---
import Gig from '@/components/pages/gig.astro';
import { getGigs } from '@/lib/content/get-gigs';

export async function getStaticPaths() {
  const gigs = await getGigs();

  return gigs.map((gig) => {
    return {
      params: {
        slug: gig?.slug.current,
      },
    };
  });
}

const { params } = Astro;
---

<Gig slug={params.slug} />
