---
import { cn } from '@/lib/utils';
import { PortableText as PortableTextInternal } from 'astro-portabletext';
import PortableTextImage from './portable-text-image.astro';

const { portableText, className } = Astro.props;

const components = {
  type: {
    image: PortableTextImage,
  },
};
---

<article class={cn(
  "prose prose-stone prose-invert max-w-none",
  "prose-h1:text-5xl prose-h1:md:text-8xl prose-h1:font-medium prose-h1:mb-8 prose-h1:mt-4 prose-h1:text-foreground/90 prose-h1:break-words prose-h1:first:mt-0",
  "prose-h2:text-3xl prose-h2:md:text-5xl prose-h2:font-medium prose-h2:mb-4 prose-h2:mt-8 prose-h2:text-foreground/90 prose-h2:break-words",
  "prose-h3:text-xl prose-h3:md:text-2xl prose-h3:text-foreground/60 prose-h3:mb-8 prose-h3:break-words",
  "prose-h4:text-lg prose-h4:md:text-xl prose-h4:text-foreground/80",
  "prose-p:md:text-lg prose-p:font-normal",
  "prose-a:hover:text-foreground prose-a:focus-within:text-foreground prose-a:transition-colors prose-a:duration-300 prose-a:ease-in-out",
className)}>
  <PortableTextInternal value={portableText} components={components}/>
</article>
