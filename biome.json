{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": ["./src/sanity/**/*"],
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "ignore": ["./src/sanity/**/*"],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "formatWithErrors": true
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80,
      "quoteStyle": "single",
      "semicolons": "always",
      "jsxQuoteStyle": "single"
    }
  }
}
